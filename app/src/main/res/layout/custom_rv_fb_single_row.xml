<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/crv_fb_name_title_tv"
        />

    <TextView
        android:id="@+id/crv_fb_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crv_fb_name_title_tv"
        android:layout_marginStart="10dp"
        android:hint="Name of employee"
        android:padding="10dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salary:"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/crv_fb_salary_title_tv"
        android:layout_below="@id/crv_fb_name_tv"
        />

    <TextView
        android:id="@+id/crv_fb_salary_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crv_fb_salary_title_tv"
        android:layout_marginStart="10dp"
        android:hint="Salary of employee"
        android:padding="10dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designation:"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/crv_fb_designation_title_tv"
        android:layout_below="@id/crv_fb_salary_tv"
        />

    <TextView
        android:id="@+id/crv_fb_des_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crv_fb_designation_title_tv"
        android:layout_marginStart="10dp"
        android:hint="Designation of employee"
        android:padding="10dp"
        android:textSize="20sp" />

</RelativeLayout>