<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/std_sr_dummy_iv"
        android:src="@drawable/ic_person"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tw_averta_regular"
        android:id="@+id/std_sr_title_id_tv"
        android:text="ID of student :"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/std_sr_dummy_iv"
        />

    <TextView
        android:id="@+id/std_sr_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/std_sr_title_id_tv"
        android:fontFamily="@font/tw_averta_regular"
        android:text="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tw_averta_regular"
        android:id="@+id/std_sr_title_name_tv"
        android:text="Name of student :"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/std_sr_dummy_iv"
        android:layout_below="@id/std_sr_title_id_tv"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tw_averta_regular"
        android:id="@+id/std_sr_name_tv"
        android:text="Dummy"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/std_sr_title_name_tv"
        android:layout_below="@id/std_sr_id_tv"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@id/std_sr_dummy_iv"/>



</RelativeLayout>